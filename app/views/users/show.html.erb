

    <div class="card">

      <div class="hero-image">
        <% if @user.photo.attached? %>
          <%= cl_image_tag @user.photo.key, height: 300, width: 400 %>
        <% end %>

      </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="profile-card">
          <div class="profile_image">
            <% if @user.photo.attached? %>
              <%= cl_image_tag @user.photo.key, height: 300, width: 400 %>
            <% end %>

            <%= render partial: 'users/form', locals: {model: @user, url: user_registration_path, verb: :patch} %>

          </div>
          <div class="profile-text">
            <h6>About Me</h6>
            <p><%= @user.bio %></p>
          </div>
          <div class="profile-numbers">
            <p><%= @user_projects.count %> Projects </p>

            <%= link_to "View Spotify", "#", class: "spotify-link" %>
          </div>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="right-profile" >
          <div class="profile-header">
            <h1> Artist name</h1>
            <p><%= @user.first_name.upcase%> <%=@user.last_name.upcase %> </p>
          </div>
          <div class="profile-body">
          <h3> My Projects</h3>
          <h6>In progress</h6>
            <% @user_projects.each do |demo_project| %>
              <% if demo_project.status == "Demo Recorded" %>
                <%= demo_project.title %><br>
              <% end %>
            <% end %>


          <h6>My completed projects</h6>
            <% @user_projects.each do |demo_project| %>
              <% if demo_project.status == "Completed" %>
                <%= demo_project.title %><br>
              <% end %>
            <% end %>
          <h6><%= @user.first_name %></h6>
          <h6><%= @user.last_name %></h6>
          <h6><%= @user.artist_name %></h6>
          </div>
        </div>
      </div>
  </div>
</div>

