<div class="profile-card">

  <div class="hero-image">
    <% if @user.photo.attached? %>
      <%= cl_image_tag @user.photo.key %>
    <% else %>
      <%= image_tag "user.png"%>
    <% end %>
  </div>

  <div class="content">
    <div class="profile-left">
      <div class="profile-card-image">
        <% if @user.photo.attached? %>
          <%= cl_image_tag @user.photo.key, height: 300, width: 400, overflow: :hidden %>
        <% else %>
          <%= image_tag "user.png"%>
        <% end %>
      </div>
 <!--      <div class="update-image-btn"> -->
        <p>
          <button class="update-image-btn" type="button" data-toggle="collapse" data-target="#upload-image" aria-expanded="false" aria-controls="upload-image">
            Update Profile Picture
          </button>
        </p>
        <div class="collapse" id="upload-image">
          <div class="update-image update-image-body">
            <%= render partial: 'users/form', locals: {model: @user, url: user_registration_path, verb: :patch} %>
          </div>
     <!--    </div> -->
      </div>






      <div>this is the about section</div>
      <div>this is for social media</div>
    </div>

    <div class="profile-right">
      <div class="profile-header">
        <h1><%= @user.artist_name.upcase %></h1><br>
        <h6><%= @user.first_name %> <%= @user.last_name %> </h6>
        <div class="profile-spotify-follow-btn">
          <iframe src="https://open.spotify.com/follow/1/?uri=spotify:artist:6sFIWsNpZYqfjUpaCgueju&size=basic&theme=dark&show-count=0" width="200" height="25" scrolling="no" frameborder="0" style="border:none; overflow:hidden;" allowtransparency="true"></iframe>
        </div>
      </div>
      <div class="profile-spotify">
        <iframe src="https://open.spotify.com/embed/artist/246dkjvS1zLTtiykXe5h60" width=100% height="80" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
      </div>
      <div class="profile-subheader">
        this is the ongoing pros
        <div class="albums-row">
          this is for ongoing albums
        </div>
      </div>
      <div class="profile-subheader">
        this is the completed pros
         <div class="albums-row">
          this is for ongoing albums
        </div>
      </div>
    </div>

  </div>

</div>

