<div class="container">
  <div class="row justify-content-center">


      <%= simple_form_for model, method: verb, url: url do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :title, label: "Name your project" %>
        <%= f.input :description, label: "Describe your project"%>
        <%= f.input :genre, collection: Project::GENRES %>
        <%= f.input :status, collection: Project::STATUTES %>
      </div>

      <div class="row justify-content-center">

        <div class="form-actions">
          <%= f.submit class: "btn btn-outline-dark  w-70"%>
        </div>
        <% end %>

      </div>

  </div>
</div>
